//------------------------------
//        1. assert.h
#include <stdio.h>
#include <assert.h>
int main(){
    int b = 0;
    while(1){
    printf("將大於3的輸入值+1:");
    scanf("%d",&b);
    assert(b > 3); //若值不大於3則報錯
    printf("%d\n",b+1);
    }
    return 0; 
}
//------------------------------
//        2.ctype.h
#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main(){
    while(1){
        char thing[1000]={};
        printf("What do you like?: ");
        scanf("%s",thing);
        for(int i = 0;i < strlen(thing);i++){
            if(isalpha(thing[i])==0) //如果偵測到字元非字母則回傳0(False)
                return 0;
        }
        printf("I like %s.\n",thing);
    }
    return 0;
}
